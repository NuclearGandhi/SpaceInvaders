<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="PixelText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text_color_dark</item>
    </style>

    <style name="PixelButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/press_start_2p_normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text_color_dark</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>
